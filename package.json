    ]
  },
  "prettier": "configs-og/prettier.config.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": [
      "eslint --quiet"
    ]
